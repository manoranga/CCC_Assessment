<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/main_activity_background"
    android:layout_height="match_parent">

    <com.test.assignment.utils.CustomNestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:background="@color/main_activity_background"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_recycle_view"
                    android:layout_width="match_parent"
                    android:background="@color/main_activity_background"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>

            </FrameLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/main_view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <FrameLayout
                android:id="@+id/pager_indicator_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/pager_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ci_drawable="@drawable/view_pager_selector_white"
                    app:ci_drawable_unselected="@drawable/view_pager_un_selector"
                    app:ci_width="8dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_view_category_parent_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/home_view_category_container"
                    android:layout_width="200dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:id="@+id/home_view_category_view"
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_category"
                            android:layout_width="match_parent"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:layout_height="0dp">

                        </androidx.recyclerview.widget.RecyclerView>

                        <include
                            android:id="@+id/search_bar"
                            layout="@layout/search_bar"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/location_bar_view"
                    layout="@layout/location_bar"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </RelativeLayout>

    </com.test.assignment.utils.CustomNestedScrollView>

    <FrameLayout
        android:id="@+id/fragment_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>


